@{
    ViewData["Title"] = "Usuarios";
}
@using TP10.ViewModels
@model ListarUsuariosViewModels

<h2>Listado de Usuarios</h2>

<table class="table table-dark">
    <thead>
        <tr>
            <th hidden>ID</th>
            <th>Nombre</th>
            <th hidden>Contraseña</th>
            <th>Rol</th>
            @if(Model.EsAdministrador)
            {
            <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model.Usuarios)
        {
            <tr>
                <td hidden>@usuario.Id</td>
                <td>@usuario.NombreDeUsuario</td>
                <td hidden>@usuario.Contrasenia</td>
                <td>@usuario.Rol</td>
                @if(Model.EsAdministrador)
                {
                <td>
                    <a asp-controller="Usuario" asp-action="UpdateUsuario" asp-route-idUsuario="@usuario.Id" class="btn btn-success">Editar</a>
                    <a asp-controller="Usuario" asp-action="DeleteUsuario" asp-route-idUsuario="@usuario.Id" onclick="return confirm('¿Estas seguro que quieres eliminar el elemento?')" class="btn btn-success">Eliminar</a>                      
                </td>
                }
            </tr>
        }
    </tbody>
</table>

@if(Model.EsAdministrador)
{
    <a href="CreateUsuario" class="btn btn-primary">Crear Nuevo Usuario</a>
}



