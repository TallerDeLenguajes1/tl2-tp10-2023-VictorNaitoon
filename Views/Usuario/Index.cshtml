@{
    ViewData["Title"] = "Usuarios";
}

@model List<Usuario>

<h2>Listado de Usuarios</h2>

<table class="table table-dark">
    <thead>
        <tr>
            <th hidden>ID</th>
            <th>Nombre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td hidden>@usuario.Id</td>
                <td>@usuario.NombreDeUsuario</td>
                <td>
                    <a asp-controller="Usuario" asp-action="UpdateUsuario" asp-route-idUsuario="@usuario.Id">Editar</a>
                    <a asp-controller="Usuario" asp-action="DeleteUsuario" asp-route-idUsuario="@usuario.Id" onclick="return confirm('Â¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>                      
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="CreateUsuario" class="btn btn-primary">Crear Nuevo Usuario</a>



