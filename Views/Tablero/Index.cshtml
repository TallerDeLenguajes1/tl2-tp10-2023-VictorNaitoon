
@{
    ViewData["Title"] = "Tableros";
    var usuario = Context.Session.GetString("Rol");
}
@using TP10.ViewModels
@model List<ListarTablerosViewModel>

<h2>Listado de los tableros</h2>

<table class="table table-dark">
    <thead>
        <tr>
            <th hidden>ID</th>
            <th>Usuario Propietario</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            @if(usuario == "Administrador")
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var tablero in Model)
        {
            <tr>
                <td hidden>@tablero.IdTablero</td>
                <td>@tablero.NombreDeUsuarioPropietario</td>
                <td>@tablero.Nombre</td>
                <td>@tablero.Descripcion</td>
                @if(usuario == "Administrador")
                {
                    <td>
                        <a asp-controller="Tablero" asp-action="UpdateTablero" asp-route-idTablero="@tablero.IdTablero" class="btn btn-success">Editar</a>
                        <a asp-controller="Tablero" asp-action="DeleteTablero" asp-route-idTablero="@tablero.IdTablero" onclick="return confirm('Â¿Estas seguro que quieres eliminar el elemento?')" class="btn btn-success">Eliminar</a>                      
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
@if(usuario == "Administrador")
{
    <a href="CreateTablero" class="btn btn-primary">Crear Nuevo Tablero</a>
}