@using TP10.ViewModels
@model ModificarTableroViewModel

<form asp-controller="Tablero" asp-action="UpdateTablero">
    <input hidden asp-for="@Model.Id">

    <div class="form-group">
        <label asp-for="@Model.IdUsuarioPropietario">ID Usuario Propietario</label>
        <input asp-for="@Model.IdUsuarioPropietario" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.Nombre">Nombre Tablero</label>
        <input asp-for="@Model.Nombre" class="form-control" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Descripcion">Descripcion Tablero</label>
        <input asp-for="@Model.Descripcion" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
</form>